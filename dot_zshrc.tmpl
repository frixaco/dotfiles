envsource() {
  if [ "$#" -eq 0 ]; then
    echo "Usage: envsource <env-file>"
    return 1
  fi

  while IFS= read -r line || [ -n "$line" ]; do
    case "$line" in
      \#*|"") continue ;;
    esac

    key="${line%%=*}"
    value="${line#*=}"

    export "$key=$value"
    echo "Exported key $key"
  done < "$1"
}

function g() {
    local original_dir="$(pwd)"
    
    lazygit "$@"
    
    cd "$original_dir"
}
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

